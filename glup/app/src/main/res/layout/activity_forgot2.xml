<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Forgot2Activity"
    android:orientation="vertical"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/code_text"
            android:textSize="100sp"
            android:fontFamily="@font/bungee_regular"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/greenglup"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verification"
            android:textSize="40sp"
            android:fontFamily="@font/bungee_regular"
            android:layout_gravity="center"
            android:layout_marginTop="-80dp"
            android:textColor="@color/greenglup"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the code sent to "
            android:textSize="25sp"
            android:fontFamily="@font/antic_regular"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="glup.ua@ua.pt"
            android:textSize="25sp"
            android:fontFamily="@font/antic_regular"
            android:layout_gravity="center" />

        <com.chaos.view.PinView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:itemCount="6"
            app:itemWidth="50dp"
            app:itemHeight="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:itemBackground="@color/yellowglup"
            android:inputType="number"
            style="@style/PinWidget.PinView"
            android:cursorVisible="true"
            app:lineWidth="2dp"
            app:lineColor="@color/greenglup"
            app:cursorColor="@color/black"
            app:itemRadius="5dp"/>
        <Button
            android:id="@+id/verify_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Verify Code"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:fontFamily="@font/bungee_regular"
            android:backgroundTint="@color/greenglup"/>

    </LinearLayout>



</LinearLayout>