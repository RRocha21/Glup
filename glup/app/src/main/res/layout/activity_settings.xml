<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"

    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/options_text"
            android:textSize="40sp"
            android:fontFamily="@font/bungee_regular"
            android:gravity="center"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_marginTop="-10dp">


        <Switch
            android:id="@+id/switch_dark"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/white"

            android:text="Dark Mode"
            android:textSize="30sp"
            android:textColor="@color/greenglup"/>

        <Switch
            android:id="@+id/switch_reminder"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:text="Lembrete"
            android:textSize="30sp"
            android:textColor="@color/greenglup"/>

        <Button
            android:padding="15dp"
            android:textColorHint="@color/white"
            android:id="@+id/tempo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@android:drawable/editbox_background"
            android:backgroundTint="@color/greenglup"
            android:drawableEnd="@android:drawable/arrow_down_float"
            android:drawablePadding="50dp"
            android:hint="15 min"
            android:textSize="30dp"></Button>


        <Button
            android:padding="15dp"
            android:textColorHint="@color/white"
            android:id="@+id/idioma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@android:drawable/editbox_background"
            android:backgroundTint="@color/white"
            android:drawableEnd="@android:drawable/arrow_down_float"
            android:drawablePadding="50dp"
            android:hint="Idioma"
            android:textSize="30dp"
            android:textColor="@color/greenglup"></Button>


    </LinearLayout>


</LinearLayout>