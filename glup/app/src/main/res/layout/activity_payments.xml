<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative_layout"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_marginTop="-5dp"
        android:textColor="@color/white"
        android:textSize="1sp"
        android:id="@+id/license1"/>
    <TextView
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:textColor="@color/white"
        android:textSize="1sp"
        android:id="@+id/license2"/>
    <TextView
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:textColor="@color/white"
        android:textSize="1sp"
        android:id="@+id/license3"/>
    <TextView
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:textColor="@color/white"
        android:textSize="1sp"
        android:id="@+id/license4"/>
    <TextView
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:textSize="1sp"
        android:textColor="@color/white"
        android:id="@+id/license5"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payments"
        android:textSize="40dp"
        android:textColor="@color/greenglup"
        android:fontFamily="@font/bungee_regular"
        android:layout_gravity="center"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/license_press"
        android:text="License Plate"
        android:fontFamily="@font/bungee_regular"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/time_press"
        android:text="Time"
        android:fontFamily="@font/bungee_regular"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/location_press"
        android:text="Local"
        android:fontFamily="@font/bungee_regular"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>

    <CheckBox
        android:id="@+id/checkBox"
        android:layoutDirection="rtl"
        android:buttonTint="@color/greenglup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use last location"
        android:textColor="@color/greenglup"
        android:layout_gravity="right"
        android:layout_marginTop="-15dp"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#00000000"
        android:fontFamily="@font/bungee_regular"
        android:id="@+id/use_gps"
        android:text="Use GPS to find your location"
        android:textColor="@color/greenglup"
        android:layout_marginTop="-10dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Cost : 0.0$"
        android:id="@+id/text_view_cost"
        android:textSize="25dp"
        android:textColor="@color/greenglup"
        android:fontFamily="@font/bungee_regular"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/text_view_finishes"
        android:text="Finishes at 18:53"
        android:textSize="25dp"
        android:textColor="@color/greenglup"
        android:fontFamily="@font/bungee_regular"
        android:layout_gravity="center"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/paybutton"
        android:text="Pay"
        android:fontFamily="@font/bungee_regular"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_marginTop="35dp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Powered by UrbanTech"
        android:layout_gravity="center"/>

</LinearLayout>